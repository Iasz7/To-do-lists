{
  "name": "to-do",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "tsnd --respawn --clear src/app.ts",
    "build": "rimraf ./dist && tsc && npm run prisma:migrate:prod",
    "start": "node dist/app.js",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy",
    "test": "clear && npm run prisma:migrate:test && jest --maxWorkers=1",
    "test:watch": "clear && npm run prisma:migrate:test && jest --watch --maxWorkers=1",
    "test:coverage": "clear && npm run migrate:migrate:test && jest --coverage --maxWorkers=1",
    "seed": "ts-node-dev ./src/data/seed/seed.ts"
  },
  "author": "Ilan Szapiro",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^28.1.8",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/nodemailer": "^6.4.16",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "prisma": "^5.19.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "env-var": "^7.5.0",
    "express": "^4.20.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.15",
    "uuid": "^10.0.0",
    "winston": "^3.13.1"
  }
}
