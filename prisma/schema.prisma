generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model List {
  id            String  @id
  name          String
  createdAt     DateTime @default(now())
  lastModifiedAt DateTime @default(now())
  items         Item[]
}

model Item {
  id             String   @id
  description    String
  isActivated    Boolean  @default(true)
  listId         String
  list           List     @relation(fields: [listId], references: [id])
  createdAt      DateTime @default(now())
  lastModifiedAt DateTime @default(now())
}